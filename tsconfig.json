{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/components/*": ["./src/components/*"],
			"@/data/*": ["./src/data/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/interfaces/*": ["./src/interfaces/*"],
			"@/langs/*": ["./src/i18n/locales/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/themes/*": ["./src/themes/*"],
			"@/utils/*": ["./src/utils/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
